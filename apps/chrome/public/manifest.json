{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "manifest_version": 3,
    "name": "YTMPX",
    "version": "1.0",
    "description": "Chrome extension for YTMPX",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://music.youtube.com/*"
            ],
            "js": [
                "scripts/content-script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    }
}